                @Html.TextBoxFor(x => x.EmployeeID, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.EmployeeID, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.EmployeeName, new { @class = "control-label col-md-2" })
